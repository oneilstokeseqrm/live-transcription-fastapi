# Neon Postgres Database URL
DATABASE_URL=your_neon_url_here

# =============================================================================
# Deepgram Configuration (Required for transcription)
# =============================================================================
DEEPGRAM_API_KEY=your_deepgram_key_here

# =============================================================================
# Redis Configuration (Required for session management)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# OpenAI Configuration (Required for transcript cleaning)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# =============================================================================
# Auth0 Configuration (Optional - for authentication)
# =============================================================================
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=your-api-audience

# =============================================================================
# Testing / Mocking Configuration
# =============================================================================
MOCK_TENANT_ID=11111111-1111-4111-8111-111111111111
MOCK_USER_ID=auth0|test-user-001
MOCK_AUTH_ENABLED=true

# =============================================================================
# AWS Configuration (Required for EventBridge & Kinesis fan-out publishing)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
EVENTBRIDGE_BUS_NAME=default
EVENT_SOURCE=com.yourapp.transcription

# =============================================================================
# Kinesis Stream Configuration (For real-time event streaming)
# The Kinesis stream name for fan-out publishing to downstream consumers
# =============================================================================
KINESIS_STREAM_NAME=eq-interactions-stream-dev

