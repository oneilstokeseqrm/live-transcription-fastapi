# Neon Postgres Database URL
DATABASE_URL=your_neon_url_here

# =============================================================================
# Deepgram Configuration (Required for transcription)
# =============================================================================
DEEPGRAM_API_KEY=your_deepgram_key_here

# =============================================================================
# Redis Configuration (Required for session management)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# OpenAI Configuration (Required for transcript cleaning)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# =============================================================================
# Auth0 Configuration (Optional - for authentication)
# =============================================================================
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=your-api-audience

# =============================================================================
# Internal JWT Authentication (Required for frontend gateway integration)
# Generate secret with: openssl rand -base64 32
# =============================================================================
INTERNAL_JWT_SECRET=your_32_char_min_secret_here
INTERNAL_JWT_ISSUER=eq-frontend
INTERNAL_JWT_AUDIENCE=eq-backend

# =============================================================================
# Legacy Header Auth (Development/Testing only)
# Set to true to allow X-Tenant-ID/X-User-ID headers without JWT
# WARNING: Set to false in production
# =============================================================================
ALLOW_LEGACY_HEADER_AUTH=true

# =============================================================================
# Testing / Mocking Configuration (deprecated, use JWT instead)
# =============================================================================
MOCK_TENANT_ID=11111111-1111-4111-8111-111111111111
MOCK_USER_ID=auth0|test-user-001
MOCK_AUTH_ENABLED=true

# =============================================================================
# AWS Configuration (Required for EventBridge & Kinesis fan-out publishing)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
EVENTBRIDGE_BUS_NAME=default
EVENT_SOURCE=com.yourapp.transcription

# =============================================================================
# Kinesis Stream Configuration (For real-time event streaming)
# The Kinesis stream name for fan-out publishing to downstream consumers
# =============================================================================
KINESIS_STREAM_NAME=eq-interactions-stream-dev

# =============================================================================
# S3 Upload Configuration (For presigned upload workflow)
# Used by /upload/* endpoints for large file ingestion
# =============================================================================
UPLOAD_BUCKET_NAME=eq-live-transcription-uploads-dev
UPLOAD_REGION=us-east-1

